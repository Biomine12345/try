<span class="thumb-info thumb-info-no-zoom thumb-info-custom mb-xl center">
  <span class="thumb-info-side-image-wrapper p-none">
    <img src="{{ product.image }}" class="img-responsive" alt="">
    {#<img class="thumb-info-custom-icon" src="/libraries/porto/HTML/img/demos/restaurant/icons/restaurant-icon-1.png" alt="" />#}
  </span>
  <span class="thumb-info-caption">
    <span class="thumb-info-caption-text">
      <h2 class="mb-md mt-xs">{{ product.name }}</h2>
      <p class="font-size-lg">{{ product.desc }}</p>
      <a class="btn btn-primary mt-md" target="_blank" href="{{ product.href }}">View More <i class="fa fa-long-arrow-right"></i></a>
    </span>
  </span>
</span>
